{
    "name": "netglue/laminas-messenger",
    "description": "Easy install and configuration for Symfony messenger in a Mezzio/Laminas application",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "George Steel",
            "email": "george@net-glue.co.uk"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.3",
        "laminas/laminas-stdlib": "^3.2",
        "psr/container": "^1.0",
        "symfony/event-dispatcher": "^5.0",
        "symfony/messenger": "^5.0",
        "symfony/serializer": "^5.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^7.0",
        "doctrine/orm": "^2.7",
        "laminas/laminas-component-installer": "^2.1",
        "laminas/laminas-config-aggregator": "^1.2",
        "laminas/laminas-servicemanager": "^3.4",
        "netglue/laminas-symfony-console": "^0.0.3",
        "phpunit/phpunit": "^9.0",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "suggest": {
        "netglue/laminas-symfony-console": "To auto-wire symfony cli commands into your DI container"
    },
    "autoload": {
        "psr-4": {
            "Netglue\\PsrContainer\\Messenger\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netglue\\PsrContainer\\MessengerTest\\": "tests"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-html build/report"
    },
    "extra": {
        "laminas": {
            "config-provider": [
                "Netglue\\PsrContainer\\Messenger\\ConfigProvider",
                "Netglue\\PsrContainer\\Messenger\\DefaultCommandBusConfigProvider",
                "Netglue\\PsrContainer\\Messenger\\DefaultEventBusConfigProvider",
                "Netglue\\PsrContainer\\Messenger\\FailureCommandsConfigProvider"
            ]
        }
    }
}
